@model ReportEsg.Models.OrganizationDetailsSurvey

@{
    ViewData["Title"] = "Modifica questionario";
}

<h1>Modifica questionario di anagrafica descrittiva</h1>

<h4>Questionario di anagrafica descrittiva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrganizationCategoryId" class="control-label"></label>
                <select asp-for="OrganizationCategoryId" class="form-control" asp-items="ViewBag.OrganizationCategoryId"></select>
                <span asp-validation-for="OrganizationCategoryId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Torna alla lista dei questionari di anagrafica descrittiva</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
