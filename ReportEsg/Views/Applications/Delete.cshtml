@model ReportEsg.Models.Application

@{
    ViewData["Title"] = "Elimina applicazione";
}

<h1>Elimina applicazione</h1>

<h3>È sicuro di voler eliminare la seguente applicazione?</h3>
<div>
    <h4>Applicazione</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Elimina" class="btn btn-danger" /> |
        <a asp-action="Index">Torna alla lista delle applicazioni</a>
    </form>
</div>
