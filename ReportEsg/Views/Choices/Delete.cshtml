@model ReportEsg.Models.Choice

@{
    ViewData["Title"] = "Elimina scelta";
}

<h1>Elimina scelta</h1>

<h3>È sicuro di voler eliminare la scelta?</h3>
<div>
    <h4>Scelta</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Score)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationSurveyQuestion)
        </dt>
    </dl>
    
    <form asp-action="Delete" asp-route-questionId="@ViewBag.QuestionId"  asp-route-surveyId="@ViewBag.SurveyId">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Elimina" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-questionId="@ViewBag.QuestionId"  asp-route-surveyId="@ViewBag.SurveyId">Torna alla lista delle scelte</a>
    </form>
</div>
