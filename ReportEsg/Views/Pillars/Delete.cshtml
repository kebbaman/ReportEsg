@model ReportEsg.Models.Pillar

@{
    ViewData["Title"] = "Elimina pilastro";
}

<h1>Elimina pilastro</h1>

<h3>È sicuro di voler eliminare il seguente pilastro?</h3>
<div>
    <h4>Pilastro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Application)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Application.Id)
        </dd class>
    </dl>
    
    <form asp-action="Delete" asp-route-applicationId ="@ViewBag.AppId">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Elimina" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-applicationId ="@ViewBag.AppId">Torna alla lista dei pilastri</a>
    </form>
</div>
